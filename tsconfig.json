{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@convex/*": ["convex/_generated/*"]
    },
    "strict": true,
    "moduleResolution": "node",   // lowercase
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",

    "noEmit": true,       // prevent .js output
    "allowJs": false      // donâ€™t allow JS files in src
  },
  "include": ["src", "convex/_generated"]   // include generated files so TS can find them
}
